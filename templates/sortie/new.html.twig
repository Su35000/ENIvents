{% extends 'base.html.twig' %}


{% block title %}
    {{ parent() }} | New évènement
{% endblock %}

{% block body %}
    <div class="titre"><h1>Nouvelle Sortie</h1></div>

    <div id="full-size">
        <div class="formulaire">

            {{ form_start(sortieForm) }}
            {{ form_row(sortieForm.nom) }}
            <div class="div_form">
                <div class="div_form">
                    {{ form_row(sortieForm.dateHeureDebut) }}
                    {{ form_row(sortieForm.dateCloture) }}
                </div>
                <div class="div_form">
                    {{ form_row(sortieForm.nbInscritMax) }}
                    {{ form_row(sortieForm.duree) }}
                </div>
            </div>
            {{ form_row(sortieForm.description) }}
            <div class="div_form">
                {{ form_row(sortieForm.lieu) }}
                <button class="btn"> Ajouter un lieu</button>
            </div>
            {{ form_start(sortieForm) }}
            {{ form_widget(sortieForm) }}
            {#  {{ form_row(sortieForm.lieu) }} #}

            <button class="btn-login"> Créer l'événement !</button>
            {{ form_end(sortieForm) }}

        </div>
    </div>

{% endblock %}

{% block extrastyles %}
    <script type="text/javascript">
        ChangeIt();
    </script>
{% endblock %}